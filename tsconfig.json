{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./out/",
    "strict": true,
    "alwaysStrict": true,
    "rootDir": "./src/",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true
  },
  "include": [
    "./src/*",
    "./src/commands/TS",
    "./src/commands/JS"
  ]
}